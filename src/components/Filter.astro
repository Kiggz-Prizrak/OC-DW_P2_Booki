---
export interface Props {
  type: string;
  icon: string;
}

const {type, icon } = Astro.props;
---
<button>
  <span>
    <i class={icon}></i>
  </span>
  <h3>{type}</h3>
</button>

<style>
  button {
    border: 3px solid #D9D9D9;
    border-radius: 50px;
    padding: 0px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0px 10px;

    font-family: 'Raleway';
    font-style: normal;
    font-weight: 700;
    font-size: 17px;
    line-height: 20px;
  }
  button:hover {
    background-color: #DEEBFF;
  }
  span {
    font-size: 20px;
    margin-right: 10px;
    color: #0065FC;
  }
</style>